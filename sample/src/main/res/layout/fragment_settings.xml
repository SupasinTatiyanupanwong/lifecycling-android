<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:background="@color/primary">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="20dp"
            android:text="@string/title_settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/appbar_title" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View style="@style/App.Shadow.Top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/section_me"
                android:textAllCaps="true"
                android:textColor="?android:textColorHint"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/settings_profile"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/settings_profile"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/settings_privacy"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/settings_privacy"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                style="@style/App.Divider"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/settings_logout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/settings_logout"
                android:textColor="#FF0000"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>